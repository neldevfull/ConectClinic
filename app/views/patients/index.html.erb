<div class="container-fluid">
	<h2 class="page-header">
		<span>Pacientes</span>
		<%= link_to "Cadastrar Novo Paciente", new_patient_path,   
			class: "_btn-success btn btn-success"%>
	</h2> 
	<div class="panel panel-default">
		<div class="panel-heading">
			<div class="row">
				<h3 class="col-xs-12">Cadastrados</h3>
			</div>
		</div>
		<div class="panel-body">
			<!-- Find -->
			<div class="form-group">				
				<div class="row">								
					<label class="_mp _lbw control-label col-sm-1 col-lg-1">Buscar por</label>
					<select class="form-control _select _mp col-sm-2 col-lg-2">
						<option>Nome do paciente</option>
						<option>Ultima consulta</option>
						<option>E-mail</option>
						<option>Telefone</option>
					</select>
					<div class="input-group col-sm-5 col-lg-5">
						<input type="text" class="form-control" placeholder="Buscar...">
						<span class="input-group-btn">
							<button class="btn btn-default _btnc _find" type="button"></button>
						</span>
					</div><!-- /input-group -->						
				</div>				 					
				<div class="row form-group">
					<label class="_mp _lbw control-label col-sm-1 col-lg-1">Filtrar por</label>
					<select class="form-control _select _mp col-sm-2 col-lg-2">
						<option>Agendamentos de hoje</option>
						<option>Sexo masculino</option>
						<option>Sexo feminino</option>						
					</select>					
				</div>
				<div class="row _container-table table-responsive">				
					<table class="table table-condensed">
						<thead>
							<tr>
								<th>Nome</th>
								<th>E-mail</th>
								<th>Telefone</th>	
								<th>Convenio</th>															
								<th>Ultima consulta</th>
							</tr>
						</thead>
						<tbody>
							<% @patients.each do |patient| %>
								<tr>								
									<th>
										<%=
											link_to patient.name,
												edit_patient_path(patient),
												class: ""  											 
										%></th>
									<th><%= patient.email %></th>
									<th><%= patient.tellephone %></th>		
									<th>-----</th>							
									<th>-----</th>
								</tr>
							<% end %>
						</tbody>
					</table>													
				</div><!-- form-group -->
			</div><!-- form-group -->
		</div>	
	</div>
</div>	