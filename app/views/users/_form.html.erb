<div class="container-fluid">
	<h2 class="page-header">Usuario</h2>
	<div id="progressbar"></div>
	<!-- Error Message -->
	<div id="output_message"
		class="alert alert-warning" role="alert">
		<p><%= action_value %> Usuario</p>
	</div>
	<%= form_for @user, :remote => true, :format => :json,
		:html => { :id => 'new_user' } do |f| %>		
		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="row">					
					<h3 class="col-xs-12">Formulario</h3>
				</div>
			</div>
			<div class="panel-body">
				<!-- Name -->
				<div class="form-group row _lessen-row">
					<label for="user_name" class="control-label _sl col-sm-1 col-lg-1">Nome</label>
					<div class="col-xs-12 col-sm-4 col-lg-7">
						<%= f.text_field :name, class: "form-control" %>	 											
					</div>
				</div>
				<!-- email -->
				<div class="form-group row _lessen-row">
					<label for="user_email" class="control-label _sl col-sm-1 col-lg-1">E-mail</label>
					<div class="col-xs-12 col-sm-4 col-lg-7">
						<%= f.text_field :email, class: "form-control" %>											
					</div>
				</div>
				<!-- Password and Password Confirmation -->
				<div class="form-group row _lessen-row">
					<label for="user_password" class="control-label _sl col-sm-1 col-lg-1">Senha</label>
					<div class="col-xs-6 col-sm-2 col-lg-3">											
						<%= f.password_field :password, class: "form-control" %>											
					</div>
					<label for="user_password_confirmation" class="control-label col-sm-1 col-lg-1">Confirmar</label>
					<div class="col-xs-6 col-sm-2 col-lg-3">					
						<%= f.password_field :password_confirmation, class: "form-control" %>						
					</div>
				</div>
				<!-- Gender -->
				<div class="form-group row _lessen-row">
					<label class="control-label _sl col-sm-1 col-lg-1">Sexo</label>
					<div class="radio-inline">
						<%= f.radio_button :gender, 'male' %><label class="_ls" for="user_gender_male">Masculino</label>					
					</div>
					<div class="radio-inline">
						<%= f.radio_button :gender, 'female' %><label class="_ls" for="user_gender_female">Feminino</label>						
					</div>
				</div>
				<!-- Privilege -->
				<div class="form-group row _lessen-row">
					<label class="control-label _sl col-sm-1 col-lg-1">Privilegio</label>
					<div class="checkbox-inline">
						<%= f.check_box :privilege  %><label class="_ls" for="user_privilege">Admistrador do Sistema</label>					
					</div>
				</div>
				<!-- Career -->
				<div class="form-group row _lessen-row" style="margin-top: -1em;">
					<label class="control-label _sl col-sm-1 col-lg-1" for="user_status">Colabora</label>				
					<%= f.select :career, [["Profissional da Saude", "healthcare"],
						["Atendimento", "secretary"]], {},
						class: "form-control _select _f-status col-sm-2 col-lg-2" %>
				</div>
				<!-- Answer -->
				<div class="form-group row _lessen-row">
					<label class="control-label _sl col-sm-1 col-lg-1" for="user_status">Recpe√ßao</label>
					<ul id="healthcare_list"
					 	class="form-control healthcare-list col-sm-2 col-lg-2"></ul>
					<ul id="healthcare_selected"
						class="form-control healthcare-selected col-sm-2 col-lg-2">
						<li class="_healthcare-title">
							Profissionais selecionados
						</li>
					</ul>					
					<input type="hidden" id="answers" name="user[answers]">
				</div>
				<!-- Status -->
				<div class="form-group row _lessen-row" style="margin-top: -1em;">
					<label class="control-label _sl col-sm-1 col-lg-1" for="user_status">Status</label>				
					<%= f.select :status, [["Ativo", "Ativo"], ["Inativo", "Inativo"]], {},
						class: 'form-control _select _f-status col-sm-2 col-lg-2' %>
				</div>
				<!-- Buttons -->
				<div class="button-group row _plus-row">					
					<%= f.submit action_value,
						class: "btn btn-success _btn-confirm" %>
					<%= link_to "Voltar", index_users_path,   
						class: "btn btn-default _btn-back"%>													
				</div>				
			</div>
		</div>
	<% end %><!-- form -->	
</div><!-- container-fluid -->