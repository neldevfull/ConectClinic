<div class="main">	
	<div class="container-fluid">
		<h2 class="page-header">
			<span>Convenios</span>
			<%= link_to "Cadastrar Novo Convenio", new_insurance_path,    
				class: "_btn-success btn btn-success"%>
		</h2> 
		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="row">
					<h3 class="col-xs-12">Cadastrados</h3>
				</div>
			</div>
			<div class="panel-body">
				<!-- Find -->
				<div class="form-group">				
					<div class="row">								
						<label class="_mp _lbw control-label col-sm-1 col-lg-1">Buscar por</label>	
						<select class="form-control _select 
							_mp col-sm-2 col-lg-2" id="select_search">
							<option value="name">Nome do convenio</option>
							<option value="email">Identificador</option>
							<option value="cellphone">Cidade</option>
							<option value="cellphone">Estado</option>
						</select>	
						<div class="input-group col-sm-5 col-lg-5">
							<input type="text" placeholder="Buscar..."
								id="search_patients" class="form-control">
							<span class="input-group-btn">
								<button class="btn btn-default _btnc _find"
									id="btn_search_patients">
									<span class="input-group-bt"></span>
								</button>
							</span>
						</div>					
					</div>	
					<div class="row form-group">
						<label class="_mp _lbw control-label col-sm-1 col-lg-1">Filtrar por</label>
						<select class="form-control _select _mp col-sm-2 col-lg-2"
							id="filter_patients">
							<option value="todos">Todos os convenios</option>
							<option value="active">Ativo</option>
							<option value="inactive">Inativo</option>
						</select>
					</div>
					<div class="row _container-table table-responsive">
						<% if @insurances.empty? %>				
							<div class="alert alert-warning" role="alert"
								id="no_patients">
								<p>Não há convenios cadastrados até o momento</p>
							</div>
						<% else %> 				    	
							<table class="table table-condensed" id="grid_patient">
								<thead>
									<tr>
										<th>Nome</th>
										<th>Identificador</th>
										<th>Cidade</th>	
										<th>Estado</th>															
										<th>Status</th>
									</tr>
								</thead>
								<tbody id="content_patients">
									<%= render 'insurances' %>								 
								</tbody>
							</table>	
						<% end %>												
					</div><!-- form-group -->
				</div><!-- form-group -->
				<% unless @insurances.empty? %>
					<div class="simple_pagination"></div>
				<% end %>
			</div><!-- panel-body -->	
		</div><!-- panel panel-default -->
	</div><!-- container-fluid -->	
</div><!-- main -->